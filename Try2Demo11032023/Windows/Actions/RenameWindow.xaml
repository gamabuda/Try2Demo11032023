<Window x:Class="Try2Demo11032023.Windows.Actions.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Try2Demo11032023.Windows.Actions"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed"
        Title="Rename topic" Height="150" Width="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Topic:"/>
        <TextBox x:Name="TopicTB"  Text="{Binding Topic}" Width="180"/>
        <Button Content="Save"  Width="180" Margin="0,5,0,0" Click="Button_Click"/>
    </StackPanel>
</Window>
