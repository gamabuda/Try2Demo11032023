<Window x:Class="Try2Demo11032023.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Try2Demo11032023"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <WrapPanel Margin="0,0,0,10">
            <Label Width="70" Content="Username:"/>
            <TextBox x:Name="UsernameTB" Width="200"/>
        </WrapPanel>
        <WrapPanel Margin="0,0,0,10">
            <Label Width="70" Content="Password:"/>
            <PasswordBox x:Name="PasswordTB" Width="200"/>
        </WrapPanel>
        <CheckBox x:Name="RememberCB" Margin="0,0,0,10" Click="RememberCB_Click" HorizontalAlignment="Right" Content="Remeber me"/>
        <WrapPanel HorizontalAlignment="Center">
            <Button x:Name="SignInBtn" Width="50" Content="Ok" Margin="0,0,10,0" Click="SignInBtn_Click"/>
            <Button x:Name="CancelBtn" Width="50" Content="Cancel" Click="CancelBtn_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
